<h2>Books</h2>
<table>
  <thead>
    <tr>
      <th>
        Title
      </th>
      <th>
        Body
      </th>
      <th colspan="3">
      </th>
    </tr>
  </thead>
  <% @books.each do |book| %>
    <tbody>
      <td>
        <%= link_to book.title, book_path %>
      </td>
      <td>
        <%= book.body %>
      </td>
      <td>

      </td>
    </tbody>
  <% end %>
</table>
<h2>New Book</h2>
<%= form_with model: @book, url: '/books', method: :post do |f| %>
  <%= f.text_field :title %>
  <%= f.text_area :body %>
<% end %>